    "version": "0.2.0",
    "configurations": [
        {
            "name": "创建App",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "startapp",
                "${input:app_name}"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}\\myproject\\manage.py"
        },
        {
            "name": "Python 调试程序: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}\\myproject\\manage.py"
        }
    ],
    "inputs": [
        {
            "id": "app_name",
            "type": "promptString",
            "description": "输入app名称"
        }
    ]
}